<div class="container mt-4">
        <div class="row">
            <div class="col-md-4 mx-auto">
                <h1>Grocery List</h1>
            </div>
        </div>
    </div>

    <div class="container">

    <form class="make-list">
        <div class="form-group">
          <label for="formGroupExampleInput">Grocery List Name</label>
          <input type="text" class="form-control" id="name" placeholder="Name your List">
        </div>
        <div class="form-group">
          <label for="formGroupExampleInput2">What are you using it for?</label>
          <input type="text" class="form-control" id="category" placeholder="BBQ, Picnic, Party, etc (Optional)">
          <br>

        <div class="form-group">
            <label for="exampleFormControlTextarea1">List</label>
            <textarea class="form-control" id="items" rows="3"></textarea>
          </div>
          <br>

          <button class="btn btn-primary" type="submit">Save</button>
        </div>
      </form>
    </div>
